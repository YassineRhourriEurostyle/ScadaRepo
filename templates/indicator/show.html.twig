{% extends 'column.html.twig' %}

{% block title %}Indicator{% endblock %}
{% block submenu %}
    {{ include('admin/_submenu.html.twig') }}
{% endblock %}
{% block body %}
<h1>Indicator</h1>
<div class="col">
    <a href="{{ path('indicator_index') }}">Back to list</a> - 
    <a href="{{ path('indicator_edit', {'id': indicator.id}) }}">Edit</a>
</div>
<table class="no-filtering col-md-12 table table-sm table-bordered">
    <tbody>
                    <tr>
                <th>Id</th>
                <td>{{ indicator.id }}</td>
            </tr>
                    <tr>
                <th>Name</th>
                <td>{{ indicator.Name }}</td>
            </tr>
                    <tr>
                <th>MaxIterations</th>
                <td>{{ indicator.MaxIterations }}</td>
            </tr>
                    <tr>
                <th>Required</th>
                <td>{{ indicator.Required ? 'Yes' : 'No' }}</td>
            </tr>
                    <tr>
                <th>Tolerance</th>
                <td>{{ indicator.Tolerance }}</td>
            </tr>
            </tbody>
</table>

{{ include('indicator/_delete_form.html.twig') }}
{% endblock %}
