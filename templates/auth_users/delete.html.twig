{% extends 'column.html.twig' %}

{% block title %}Delete User{% endblock %}
{% block body %}
    <h1>Confirm Deletion</h1>
    <p>Are you sure you want to delete <strong>{{ user.adLogin }}</strong>?</p>
    <form action="{{ path('auth_users_delete', { id: user.iduser }) }}" method="post">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.iduser) }}">
        <button type="submit">🗑 Yes, Delete</button>
        <a href="{{ path('auth_users_index') }}">❌ Cancel</a>
    </form>
{% endblock %}
