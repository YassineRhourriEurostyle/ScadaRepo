{% extends 'column.html.twig' %}

{% block title %}Users List{% endblock %}


{% block submenu %}
    {#{% include 'authusers/_submenu.html.twig' %}#}
{% endblock %}
{% block body %}
    <h1>Users List</h1>
    <a href="{{ path('auth_users_new') }}">➕ Add New User</a>
    <ul>
        {% for user in users %}
            <li>
                {{ user.adLogin }} (Group ID: {{ user.idgroupusr }}) 
                <a href="{{ path('auth_users_edit', { id: user.iduser }) }}">✏️ Edit</a> 
                <!-- Redirect to confirmation page -->
                <a href="{{ path('auth_users_confirm_delete', { id: user.iduser }) }}">
                    <button class="btn btn-danger">🗑 Delete</button>
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
