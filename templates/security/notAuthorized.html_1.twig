{% extends 'column.html.twig' %}
{% block title %}
    Not allowed
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-2 mx-auto">
            <img src="/img/access_denied.png" class="col-12"/>
        </div>
        <div class="col-12 text-center">
            <h1 class="ps-0 ms-0 pe-0 me-0">You're not allowed to access this page.</h1>
            <h3 class="standard-red">Reason: {{ message }}</h3>
        </div>
        <div class="col-12 text-center">
            <a href="/security/request-access?reason={{ message|url_encode() }}&url=&manager=IT">Send a request to access this page</a>
        </div>
        <div class="col-12 text-center">
            <a href="javascript:history.go(-1)">Go back to previous page</a>
        </div>
    </div>
{% endblock %}
